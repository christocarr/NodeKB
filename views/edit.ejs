<% include ./partials/header %>

<div class="container">
  <h1>Edit <%= article.title %></h1>
  <form action="/articles/edit/<%= article._id %>" method="POST">
    <div>
      <input class="form-control" type="text" name="title" placeholder="title" value="<%= article.title %>">
    </div>
    <div>
      <input class="form-control" type="text" name="author" placeholder="author" value="<%= article.author %>">
    </div>
    <div>
      <textarea class="form-control" type="text" name="body" placeholder="" required><%= article.body %></textarea>
    </div>
    <button class="btn btn-light" type="submit">Submit</button>
  </form>
</div>


<% include ./partials/footer %>